// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Occupation {
  ACCOUNTANT
  ENGINEER
  DOCTOR
  DEVELOPER
  ARTIST
  STUDENT
}

model Employee {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  name       String
  occupation Occupation
}
